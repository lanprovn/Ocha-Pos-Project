# Environment
NODE_ENV=production
PORT=8080

# Database (Railway sẽ tự động cung cấp)
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration (QUAN TRỌNG: Tạo một secret mạnh!)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long_2024_change_this
JWT_EXPIRES_IN=7d

# Frontend & Backend URLs (Cập nhật sau khi deploy)
FRONTEND_URL=https://your-frontend-app.railway.app
BACKEND_URL=https://your-backend-app.railway.app

# Logging
LOG_LEVEL=info

# Bank QR Code (Optional)
BANK_CODE=
BANK_ACCOUNT_NUMBER=
BANK_ACCOUNT_NAME=
QR_TEMPLATE=print

# Cloudinary Configuration (Khuyến nghị cho production)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

