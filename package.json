{
  "name": "ocha-pos-project",
  "version": "1.0.0",
  "description": "Full-stack POS system for Vietnamese cafes and restaurants",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=backend & npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=backend",
    "start:backend": "npm run start --workspace=backend",
    "preview": "npm run preview --workspace=frontend",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "lint": "npm run lint --workspaces --if-present",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prisma:generate": "npm run prisma:generate --workspace=backend",
    "prisma:migrate": "npm run prisma:migrate --workspace=backend",
    "prisma:studio": "npm run prisma:studio --workspace=backend",
    "prisma:seed": "npm run prisma:seed --workspace=backend"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "Lan Pro <lanprovn@gmail.com>",
  "license": "MIT"
}